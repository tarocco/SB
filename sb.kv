#:kivy 1.0

<SBScatter>:
    do_scale: True
    do_rotation: False

<SBView>:
    SBScatter:
        id: sb_scatter
        size_hint: (None, None)
        SBCanvas:
            id: sb_canvas
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint: (0.5, 0.5)

<LoadDirectoryDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: 'vertical'
        FileChooserListView:
            id: file_chooser
            filters: [root.is_dir]
            dirselect: True
        BoxLayout:
            size_hint_y: None
            height: 32
            Button:
                text: 'Cancel'
                on_release: root.cancel()
            Button:
                text: 'Load'
                on_release: root.choose(file_chooser.selection[0])

<MenuButton@Button>:
    size_hint: (None, 1.0)
    width: 120

<RootView>:
    SBView:
        id: sb_view
        size_hint: (None, None)
        size: self.parent.size
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        BoxLayout:
            size_hint: (1.0, None)
            height: 32
            spacing: 20
            Widget:
            MenuButton:
                text: 'choose directory'
                on_release: root.open_directory_chooser()
            Widget:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        BoxLayout:
            size_hint: (1.0, None)
            height: 32
            spacing: 20
            Widget:
            MenuButton:
                text: 'export 2d'
                on_release: root.export_2d()
            MenuButton:
                text: 'reset view'
                on_release: root.reset_view()
            MenuButton:
                text: 'export 1d'
                on_release: root.export_1d()
            Widget:

RootView: