#:kivy 1.0

<SBScatter>:
    do_scale: True
    do_rotation: False

<SBView>:

<SelectDirectoryBtn>:
    text: 'select directory'

<CenterViewBtn>:
    text: 'center view'

<Export2DBtn>:
    text: 'export 2d'

<Export1DBtn>:
    text: 'export 1d'


<LoadDirectoryDialog>:
    id: dialog
    BoxLayout:
        orientation: 'vertical'
        FileChooserListView:
            id: file_chooser
            filters: [dialog.is_dir]
        BoxLayout:
            size_hint_y: None
            height: 32
            Button:
                text: 'Cancel'
                on_release: dialog.on_cancel()
            Button:
                text: 'Load'
                on_release: dialog.on_load(file_chooser.path, file_chooser.selection)

FloatLayout:
    SBView:
        size_hint: 1, 1
        id: main_view
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        BoxLayout:
            size_hint: (1.0, None)
            height: 32
            spacing: 20
            Widget:
            SelectDirectoryBtn:
                size_hint: (None, 1.0)
                width: 120
            Widget:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        BoxLayout:
            size_hint: (1.0, None)
            height: 32
            spacing: 20
            Widget:
            Export2DBtn:
                size_hint: (None, 1.0)
                width: 120
            CenterViewBtn:
                size_hint: (None, 1.0)
                width: 120
            Export1DBtn:
                size_hint: (None, 1.0)
                width: 120
            Widget:

