#:kivy 1.0

<SBScatter>:
    do_scale: True
    do_rotation: False

<SBView>:
    SBScatter:
        size_hint: (None, None)
        SBCanvas:
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint: (0.5, 0.5)
            id: sb_canvas

<ChooseDirectoryBtn>:
    text: 'choose directory'

<CenterViewBtn>:
    text: 'center view'

<Export2DBtn>:
    text: 'export 2d'

<Export1DBtn>:
    text: 'export 1d'


<LoadDirectoryDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: 'vertical'
        FileChooserListView:
            id: file_chooser
            filters: [root.is_dir]
            dirselect: True
        BoxLayout:
            size_hint_y: None
            height: 32
            Button:
                text: 'Cancel'
                on_release: root.cancel()
            Button:
                text: 'Load'
                on_release: root.load(file_chooser.path, file_chooser.selection)

FloatLayout:
    SBView:
        size_hint: (None, None)
        size: self.parent.size
        id: main_view
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        BoxLayout:
            size_hint: (1.0, None)
            height: 32
            spacing: 20
            Widget:
            ChooseDirectoryBtn:
                size_hint: (None, 1.0)
                width: 120
            Widget:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        BoxLayout:
            size_hint: (1.0, None)
            height: 32
            spacing: 20
            Widget:
            Export2DBtn:
                size_hint: (None, 1.0)
                width: 120
            CenterViewBtn:
                size_hint: (None, 1.0)
                width: 120
            Export1DBtn:
                size_hint: (None, 1.0)
                width: 120
            Widget:

