                size_hint: (None, 1.0)
                width: 120
            Widget:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        BoxLayout:
            size_hint: (1.0, None)
            height: 32
            spacing: 20
            Widget:
            Export2DBtn:
                size_hint: (None, 1.0)
                width: 120
